<% if @contact && @contact.errors.any? %>
<div class="alert alert-warning">
  <h3>The following errors prevented the contact from being saved:</h3>
  <ul>
    <% @contact.errors.full_messages.each do |msg| %>
     <li><%= msg %></li> 
    <% end %>
  </ul>
</div>
<% end %>

<h2><%= t('contacts.contact_us') %></h2>
<%= form_for :contact, url: contacts_path, local: true, data: { turbo: false } do |f| %>
  <div class="form-group">
    <%= f.label :email, class:"form-label" %>
    <%= f.text_field :email, class:"form-control" %>
  </div>
  <div class="form-group">
    <br/>
    <%= f.label :message, class:"form-lable" %>
    <%= f.text_area :message, rows: 5, class:"form-control" %>
  </div>
  <div>
    <br/>
    <%= f.submit 'Send message', data: { disable_with: false }, class: "btn btn-primary" %>
  </div>
<% end %>
