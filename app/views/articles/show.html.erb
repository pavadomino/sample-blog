<h3>Article name: <%= @article.title %></h3>
<p><%= @article.text %></p>
<span style="font-size: 75%; color: #999"> Created at <%= @article['created_at'] %></span>
<p>
<h3>Comments:</h3>
<% @article.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <span style="font-size: 75%; color: #999"> Comment created by <%= comment.author %> at <%= comment.created_at %></span>
  <hr/>
<%end%>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <div> Username: 
    <% if user_signed_in? %>
      <%= current_user.username %>
      <%= f.hidden_field :author, value: current_user.username %><br/>
    <% end %> 
    <%= f.label :body, class:"form-label" %><br/>
    <%= f.text_area :body, class:"form-control", rows: 3 %>
  </div>
  <div>
    <br/>
    <%= f.submit 'Send comment', data: { disable_with: false }, class: "btn btn-primary"%>
  </div>

<% end %>
</p>
